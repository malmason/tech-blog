<div class="text-start">
  <h2>{{name}}</h2>
  <p>{{title}}</p>
  <p>{{contents}}</p>
  <p>Created by: {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if comments.length}}
<div class="col-md-6 comments">
  {{#each comments as |comment|}}
    <p>{{comment.comment}}</p>
  {{/each}}
</div>
{{/if}}