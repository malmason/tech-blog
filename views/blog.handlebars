<div class="text-center">
  <h2>{{title}}</h2>
</div>
<div class="bg-light p-2 blog-contents">
  <p>{{contents}}</p>
</div>
<div class="text-end px-2 text-light blog-footer">
  <p>Posted by: {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if comments.length}}
<div class="col-md-6 comments">
  {{#each comments as |comment|}}
    <p class="p-comment">{{comment.comment}}</p>
    <p>{{comment.user.name}}</p>
  {{/each}}
</div>
{{/if}}

<div class="form border p-2">
    <p>Leave a comment</p>
   <textarea class="form-control my-2 new-comment" style="height: 100px;">     
  </textarea>
  <div class="text-end">
    <button class="btn btn-comment text-light" data-id="{{id}}">Save Comment</button>
  </div>
  
</div>

<script src="../js/comments.js"></script>