<div class="row">
  <div class="col-6">
    <h3>Welcome, {{name}}!</h3>
  </div>
  <div class="col-4">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new-post">
  Create A New Post
    </button>
  </div>
</div>

<div class="row mt-2">
  <div id="new-post" class="col-md-6 modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Create a New Post</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class="form new-post-form">
            <div class="form-group">
              <label for="post-name form-label">Title:</label>
              <input class="form-input form-control" type="text" id="post-name" name="post-name" />
            </div>
          
            <div class="form-group mb-2">
              <label for="post-desc form-label">Contents:</label>
              <textarea class="form-input form-control" id="post-desc" name="post-desc"></textarea>
            </div>
            </div>
            <div class="modal-footer">
              <div class="form-group text-end">
                <button type="submit" id="btnNew" class="btn btn-primary">Create</button>
              </div>
            </div>
          </form>
      </div>
    </div>
  </div>
 
   <h4>Current Blog Posts</h4>
  {{#if blogposts.length}}
  <div class="col-md-6 post-list">
    {{#each blogposts as |blog|}}
    <div class="row mb-2">
      <div class="form">
        <div class="col-md-8">
          <h5><a href="/blog/{{blog.id}}">{{blog.title}}</a></h5>
          <textarea class="form-input form-control my-2" id="blog-{{blog.id}}">
            {{blog.contents}}
          </textarea> 
        </div>
        
        <div class="col-md-4 text-center">
          <button id="update-btn" class="btn btn-sm btn-warning text-start mx-2" data-id="{{blog.id}}">UPDATE</button>
        
          <button id="del-btn" class="btn btn-sm btn-danger text-end" data-id="{{blog.id}}">DELETE</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

</div>

<script src="./js/profile.js"></script>
