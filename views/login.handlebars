<div class="row justify-content-center mb-3">
  <div class="col-md-6 p-2 form-border">
    <h2 class="mb-4">Login</h2>

    <form class="form login-form">
      <div class="form-group mb-2">
        <label for="email-login" class="form-label">E-mail:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group mb-2">
        <label for="password-login form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group text-end">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-6 p-2 form-border">
    <h2 class="mb-4 mt-4">Signup</h2>

    <form class="form signup-form">
      <div class="form-group mb-2">
        <label for="name-signup" class="form-label">Name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group mb-2">
        <label for="password-signup" class="form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group text-end">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
  
</div>

<script src="./js/login.js"></script>