<div class="row row-cols-1 row-cols-md-2 g-4 blog">
  {{#each blogs as |blog| }}
  <div class="col">
    <div class="card mb-3 h-100">
      <div class="card-body">
        <h2 class="card-title">
          <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
        <p class="contents">{{blog.contents}}</p>
      </div>
      <div class="card-footer text-end">
        <p class="text-muted">Created by: {{user.name}} on {{format_date blog.date_created}}</p>
      </div>
    </div>
  </div>
  {{!-- Loop through the comments if any exist --}}
    <ul class="list-group">
      {{#if comments.length}}
        {{#each comments as |comment|}}
          <li class="list-group-item">{{comment.comment}}</li>
        {{/each}}
      {{/if}}
    </ul>
  {{/each}}
</div>
